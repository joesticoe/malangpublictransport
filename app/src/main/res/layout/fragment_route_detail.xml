<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"

    tools:background="@drawable/rounded_background"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:layout_marginTop="12dp"
    android:layout_marginBottom="12dp"
    android:orientation="vertical">

    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/item_route_selected"
            android:id="@+id/selected_route"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#cccccc"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="4dp"
            android:src="@drawable/ic_trending_up_black_24dp"
            android:layout_gravity="center_vertical"
            android:tint="@color/colorPrimaryDark"
            />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvItinerary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp">
    </android.support.v7.widget.RecyclerView>

    <!--
    <include
        layout="@layout/item_startpoint" />
    <include
        layout="@layout/item_walk" />
    <include
        layout="@layout/item_line" />
    <include
        layout="@layout/item_walk_interchange" />
    <include
        layout="@layout/item_endpoint" />
        -->

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:background="#ffffff" />


</LinearLayout>